<mvc:View xmlns="sap.m" class="sapUiSizeCompact"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" controllerName="de.bauerberatung.ui5-task.modules.Lieferant.LieferantList">

    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Lieferanten"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <List id="supplierList" width="auto" class="sapFDynamicPageAlignContent" items="{
                    path: 'SupplierModel>/SupplierList',
                    sorter: {
                        path: 'CompanyName',
                        descending: false
                    }
                }" busyIndicatorDelay="{masterView>/delay}" selectionChange=".onSelectionChange">
                <headerToolbar>
                    <OverflowToolbar>
                        <SearchField id="searchField" search=".onSearch" liveChange=".onSearch" width="100%">
                            <layoutData>
                                <OverflowToolbarLayoutData shrinkable="true" priority="NeverOverflow" />
                            </layoutData>
                        </SearchField>
                        <ToolbarSpacer />
                        <Button press="onRefreshSupplier" icon="sap-icon://refresh" type="Transparent" />
                        <Button press="onAddSupplier" icon="sap-icon://add" type="Transparent" />
                        <!--ToolbarSpacer/>
						<Button press=".onOpenViewSettings" icon="sap-icon://sort" type="Transparent"/-->
                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <StandardListItem type="Navigation" press=".onSelectionChange" title="{SupplierModel>CompanyName}" description="{SupplierModel>SupplierID}" iconDensityAware="false" iconInset="false">
                    </StandardListItem>
                </items>
            </List>
        </f:content>
    </f:DynamicPage>
</mvc:View>